#include <iostream>
using namespace std;
bool isBuzzNumber(int n) {
    if (n % 10 == 7 || n % 7 == 0) {
        return true;
    }
    return false;
}
int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;
    string result = isBuzzNumber(num)? "a Buzz number" : "not a Buzz number";
    cout << "The number " << num << " is " << result << "." << endl;

    return 0;
}
